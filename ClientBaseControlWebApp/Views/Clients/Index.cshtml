@model List<Client>

@{
    ViewData["Title"] = "Clients";
}


<div class="col-md-8 m-auto">
    @foreach(Client client in Model){
        <hr />
        <div class="w-100 text-dark d-flex">
        
            <div class="col-8 h5 ">
                <div class="d-flex">
                    <div class="h4"><i class="bi bi-person"></i> @client.Name @client.Surname </div>
                    @if (client.Birthday == null)
                    {
                        <div class="m-2 mt-1">@client.IndicationColor</div>
                    }
                    else
                    {
                        <div class="m-2 mt-1">@client.Birthday.Value.ToShortDateString() @client.IndicationColor</div>
                    }

                </div>
                <div class="d-flex">
                    @client.PhoneNumber
                    @if(client.AllergiesComment != null && client.AllergiesComment.Length != 0)
                    {
                        <div class="m-2 mt-0 mb-0 text-warning">Алергія</div>
                    }
                    
                </div>
            </div>
            <div class="col-4">
                <a class="btn btn-primary" asp-area="" asp-controller="" asp-action=""><i class="bi bi-card-text"></i> Details</a>
                <a class="btn btn-primary" asp-area="" asp-controller="" asp-action=""><i class="bi bi-pen"></i> Edit</a>
                <a class="btn btn-danger" asp-area="" asp-controller="" asp-action=""><i class="bi bi-x-circle"></i> Delete</a>
            </div>
        
        </div>   
    }
</div>