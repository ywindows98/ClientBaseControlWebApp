@model List<Client>

@{
    ViewData["Title"] = "Clients";
}


<div class="col-md-8 m-auto">
    <div class="bg-primary bg-opacity-75 d-flex p-1">
        <div class="col-7">
          <form class="form-inline d-flex">
            <input class="form-control" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-primary d-flex" type="submit"><i class="bi bi-search m-1 mt-0 mb-0"></i> Search</button>
          </form>
        </div>
        <div class="col-5 d-flex">
            <div class="m-auto">
                <a class="btn btn-primary" asp-area="" asp-controller="Clients" asp-action="Create"><i class="bi bi-plus-circle"></i> Add new client</a>
            </div>
        </div>
    </div>
    @foreach(Client client in Model){
        <hr />
        <div class="w-100 text-dark d-flex">
        
            <div class="col-lg-7 col-md-7 col-sm-6 h5 ">
                <div class="d-flex">
                    <div class="h4"><i class="bi bi-person text-primary"></i> @client.Name @client.Surname </div>
                    @if (client.Birthday == null)
                    {
                        <div class="m-2 mt-1">@client.IndicationColor</div>
                    }
                    else
                    {
                        <div class="m-2 mt-1">@client.Birthday.Value.ToShortDateString() @client.IndicationColor</div>
                    }

                </div>
                <div class="d-flex">
                    @client.PhoneNumber
                    @if(client.AllergiesComment != null && client.AllergiesComment.Length != 0)
                    {
                        <div class="m-2 mt-0 mb-0 text-warning">Алергія</div>
                    }
                    
                </div>
            </div>
            <div class="col-lg-5 col-md-5 col-sm-6 d-flex">
                <div class="m-auto">
                    <a class="btn btn-outline-primary" asp-area="" asp-controller="" asp-action=""><i class="bi bi-card-text"></i> Details</a>
                    <a class="btn btn-outline-primary" asp-area="" asp-controller="" asp-action=""><i class="bi bi-pen"></i> Edit</a>
                    <a class="btn btn-outline-danger" asp-area="" asp-controller="" asp-action=""><i class="bi bi-x-circle"></i> Delete</a>
                </div>
            </div>
        
        </div>   
    }
</div>