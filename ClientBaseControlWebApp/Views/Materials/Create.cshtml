@using ClientBaseControlWebApp.Data.Enums;
@model Material

@{
	ViewData["Title"] = "Add new material";
	ViewData["ImagesDirectoryDepth"] = "../images";
}


<div class="row">
	<div class="col-md-8 offset-2">
		<p>
			<h1>@ClientBaseControlWebApp.Resources.Resource.AddNewMaterial</h1>
		</p>
		<div class="row">
			<div class="col-md-10 offset-1">
				<form asp-action="Create">
					<div asp-validation-summary="ModelOnly" class="text-danger">
					</div>
					<div class="row mb-2">
						<div class="form-group col-6">
							<label asp-for="Name" class="control-label">@ClientBaseControlWebApp.Resources.Resource.NameLabel</label>
							<input asp-for="Name" class="form-control" id="Name" />
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>
					</div>
					<div class="row mb-2">
						<div class="form-group col-4">
							<label asp-for="MaterialType" class="control-label">@ClientBaseControlWebApp.Resources.Resource.MaterialTypeLabel</label>
							<select asp-for="MaterialType" class="form-control" id="MaterialType">
								<option value="@Convert.ToInt32(MaterialTypeEnum.Pigment)">@ClientBaseControlWebApp.Resources.Resource.MaterialPigment</option>
								<option value="@Convert.ToInt32(MaterialTypeEnum.Needle)">@ClientBaseControlWebApp.Resources.Resource.MaterialNeedle</option>
								<option selected value="@Convert.ToInt32(MaterialTypeEnum.Other)">@ClientBaseControlWebApp.Resources.Resource.MaterialOther</option>
							</select>
							<span asp-validation-for="MaterialType" class="text-danger"></span>
						</div>
						<div class="form-group col-4">
							<label asp-for="Amount" class="control-label">@ClientBaseControlWebApp.Resources.Resource.AmountLabel</label>
							<input asp-for="Amount" class="form-control" id="Amount" value="0" />
							<span asp-validation-for="Amount" class="text-danger"></span>
						</div>
						<div class="form-group col-4">
							<label asp-for="UnitsOfMeasurement" class="control-label">@ClientBaseControlWebApp.Resources.Resource.UnitsOfMeasurementLabel</label>
							<select asp-for="UnitsOfMeasurement" class="form-control" id="UnitsOfMeasurement">
								<option selected value="0">@ClientBaseControlWebApp.Resources.Resource.PiecesUnit</option>
								<option value="1">@ClientBaseControlWebApp.Resources.Resource.MgUnit</option>
								<option value="2">@ClientBaseControlWebApp.Resources.Resource.MlUnit</option>
							</select>
							<span asp-validation-for="UnitsOfMeasurement" class="text-danger"></span>
						</div>
					</div>
					<div class="row mb-2">
						<div class="form-group">
							<label asp-for="Description" class="control-label">@ClientBaseControlWebApp.Resources.Resource.DescriptionLabel</label>
							<textarea asp-for="Description" class="form-control" id="Description" rows="2" ></textarea>
							<span asp-validation-for="Description" class="text-danger"></span>
						</div>
					</div>
					<div class="form-group mt-2">
						<button class="btn btn-outline-secondary" asp-controller="Materials" asp-action="Index"><i class="bi bi-card-list"></i> @ClientBaseControlWebApp.Resources.Resource.ShowAllButton</button>
						<button type="reset" class="btn btn-outline-warning"><i class="bi bi-arrow-clockwise"></i> @ClientBaseControlWebApp.Resources.Resource.ResetButton</button>
						<button type="submit" class="btn btn-outline-success float-end"><i class="bi bi-check-circle"></i> @ClientBaseControlWebApp.Resources.Resource.SaveButton</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
