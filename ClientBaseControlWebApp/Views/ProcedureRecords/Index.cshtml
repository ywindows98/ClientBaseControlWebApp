@using ClientBaseControlWebApp.Resources
@using ClientBaseControlWebApp.Data.Services;
@model List<ProcedureRecord>


@{
    ViewData["Title"] = "Create new procedure record";
    ViewData["ImagesDirectoryDepth"] = "images";
}


<div class="col-md-8 m-auto">
    <p>
        <h1>@Resource.ProcedureRecordsNav</h1>
    </p>
    <div class="bg-primary bg-opacity-75 d-flex p-1">
        <div class="col-7">
            <form class="form-inline d-flex" asp-action="Index">
                <input class="form-control" type="search" placeholder="@Resource.SearchBar" aria-label="@Resource.SearchBar" name="searchValue">
                <button class="btn btn-primary d-flex" type="submit"><i class="bi bi-search m-1 mt-0 mb-0"></i> @Resource.SearchBar</button>
            </form>
        </div>
        <div class="col-5 d-flex">
            <div class="m-auto">
                <a class="btn btn-primary" asp-area="" asp-controller="ProcedureRecords" asp-action="Create"><i class="bi bi-plus-circle"></i> @Resource.AddProcedureRecord</a>
            </div>
        </div>
    </div>
    @foreach (ProcedureRecord procedureRecord in Model)
    {
        
        <div class="w-100 text-dark d-flex p-2 border-top">

            <div class="col-lg-7 col-md-7 col-sm-6">
                <div class="d-flex">
                    <div class="h4">
                        <b>@procedureRecord.ProcedureType.Name</b> @Resource.For <b>@procedureRecord.Client.Name @procedureRecord.Client.Surname</b>
                    </div>
                </div>
                <div class="h5">
                    @procedureRecord.Date.ToShortDateString()
                </div>
            </div>
            <div class="col-lg-5 col-md-5 col-sm-6 d-flex">
                <div class="m-auto">
                    <a class="btn btn-outline-primary" asp-area="" asp-controller="ProcedureRecords" asp-action="Details" asp-route-id="@procedureRecord.Id"><i class="bi bi-card-text"></i> @Resource.DetailsButton</a>
                    <a class="btn btn-outline-primary" asp-area="" asp-controller="ProcedureRecords" asp-action="Edit" asp-route-id="@procedureRecord.Id"><i class="bi bi-pen"></i> @Resource.EditButton</a>
                    <a class="btn btn-outline-danger" asp-area="" asp-controller="ProcedureRecords" asp-action="Delete" asp-route-id="@procedureRecord.Id"><i class="bi bi-x-circle"></i> @Resource.DeleteButton</a>
                </div>
            </div>

        </div>
    }
</div>